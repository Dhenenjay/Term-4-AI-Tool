{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "target": "ES6",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@assets/*": [
        "./assets/*"
      ],
      "@src/*": [
        "./src/*"
      ]
    },
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}